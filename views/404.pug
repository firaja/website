extends layout

block content
  section(class='hero is-fullheight')
    nav(class="navbar")
      div(class='container')
        div(id='navMenu', class='')
          div(class='navbar-start')
            a(href='/', title="To Home")
              span(class='navbar-item mt-6')
                div(class="media")
                  figure(class="media-left is-hidden-mobile")
                    p(class="image is-64x64")
                      img(src="images/logo.png", alt='David Bertoldi logo')
                  div(class="media-content")
                    div(class="content")
                      h1(class='title has-text-weight-light	is-size-1') David Bertoldi
                      h2(class='subtitle has-text-weight-normal	is-size-3') Technical Architect
    div(class='hero-body')
      div(class='container has-text-centered is-size-5')
        h1(class='is-size-1 mb-2') The resource you are requestig cannot be found
        hr
        strong(class='has-text-dark') But do not despair! Here a sequence of bits with a Shannon entropy 
          em H(X) = #{entropy} 
          | you may find useful
        p(class='has-text-justified')= bits

